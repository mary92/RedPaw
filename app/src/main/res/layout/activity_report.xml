<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ReportActivity">

    <TextView
        android:id="@+id/report_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="Report a Stray"/>


    <ImageView
        android:id="@+id/report_imgViewPhoto"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/report_title"
        android:src="@drawable/placeholder"/>

    <Button
        android:id="@+id/report_btnUploadPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_below="@+id/report_fieldLocation"
        android:onClick="onClickBtnUploadPhoto"/>


    <EditText
        android:id="@+id/report_fieldDescription"
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:background="#ffffff"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:layout_below="@id/report_title"
        android:layout_toRightOf="@id/report_imgViewPhoto"
        android:hint="A brief description"
        android:text=""/>

    <Button
        android:id="@+id/report_btnReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickBtnReport"/>

    <Button
        android:id="@+id/report_btnLocate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locate"
        android:layout_alignParentRight="true"
        android:layout_below="@id/report_fieldDescription"
        android:layout_marginLeft="5dp"
        android:onClick="onClickBtnLocate"/>

    <EditText
        android:id="@id/report_fieldLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp"
        android:hint="Your location"
        android:layout_marginTop="10dp"
        android:layout_below="@id/report_fieldDescription"
        android:layout_toLeftOf="@id/report_btnLocate"
        android:text=""/>


</RelativeLayout>
