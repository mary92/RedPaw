<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.marija.redpaw.AddShelterActivity">

    <TextView android:text="Register Your Animal Shelter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/add_shelter_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the Shelter"/>
    <EditText
        android:id="@+id/add_shelter_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Registered official ID of the Shelter"/>

    <EditText
        android:id="@+id/add_shelter_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Address of the shelter"/>

    <EditText
        android:id="@+id/add_shelter_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Phone number"/>

    <EditText
        android:id="@+id/add_shelter_long"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Longitude"/>
    <EditText
        android:id="@+id/add_shelter_lat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Latitude"/>

    <EditText
        android:id="@+id/add_shelter_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Description"/>

    <Button
        android:id="@+id/add_shelter_submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="onClickSubmitBtn"/>


</LinearLayout>
