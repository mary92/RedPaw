<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp"
    android:layout_width="fill_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/adoptitem_imgViewPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_dog"/>

    <TextView
        android:id="@+id/adoptitem_description"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_above="@+id/adoptitem_shelter"
        android:layout_toEndOf="@+id/adoptitem_imgViewPhoto"/>

    <TextView
        android:id="@+id/adoptitem_shelter"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_toEndOf="@+id/adoptitem_imgViewPhoto"/>

</RelativeLayout>
